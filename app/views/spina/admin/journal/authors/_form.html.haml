= form_for @author, url: admin_journal_institutions_path, html: {autocomplete: "off"} do |f|
  - content_for :notification_alert do
    error

  #page_content
    .table-container
      %table.table.table-form
        %tr
          %td
            Name
          %td

  %button.button.button-primary{type: 'submit', data: {icon: 'o'}}
    Save

  = link_to 'Cancel', admin_journal_authors_path, class: 'button button-link'

  - unless @author.new_record?
    .pull-right= link_to 'Delete', admin_journal_author_path, method: :delete, confirm: 'Are you sure?', class: 'button button-link button-danger'
